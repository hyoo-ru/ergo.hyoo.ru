$hyoo_ergo_thesis_create $mol_page
	domain $hyoo_ergo_domain
	title <= page_title @ \New Thesis
	tools /
		<= Publish $mol_button_major
			title @ \Publish
			click?val <=> publish?val null
		<= Close $mol_link
			arg * thesis_new null
			sub / <= Close_icon $mol_icon_cross
	body /
		<= Text $mol_textarea
			hint @ \Type here
			value?val <=> text?val \
